@page "{id:int}"
@model DeletePostModel
@{
    ViewData["Title"] = "Usuń post";
}

<h1>Usuń post</h1>
<p>Czy na pewno chcesz usunąć post "@Model.Post.Title"?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a href="/Index" class="btn btn-secondary">Anuluj</a>
</form>
