@page "{id:int}"
@model DeletePostModel
@{
    ViewData["Title"] = "Delete post";
}

<h1>Delete post</h1>
<p>Are you sure you want to delete the post "@Model.Post.Title"?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Index" class="btn btn-secondary">Cancel</a>
</form>
